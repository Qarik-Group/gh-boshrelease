---
name: gh-cli
packages: [gh-cli-2]
templates:
  env: env
  runtime-setup: runtime-setup
  token: .gh/token
properties:
  protocol:
    description: "The protocol to use for git operations: {ssh|https}"
    default: "https"
  hostname:
    description: "The hostname of the GitHub instance to authenticate with"
    default: "github.com"
  scopes:
    description: "Additional authentication scopes to request"
    default: "repo,read:org"
  token:
    description: "The GitHub personal access token to use during authentication"
